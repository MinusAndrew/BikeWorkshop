<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="450" prefWidth="720" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.bikeworkshop.viewController.MechanicView">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>

            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Registrar Mecanico" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="backButton" onAction="#backToMenu" text="Volver" />
        </HBox>

    </top>

    <center>
        <VBox spacing="12">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <GridPane hgap="10" vgap="10">
                <Label text="Nombre completo:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="txtFullName" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Identificación:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="txtInternalId" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <ChoiceBox fx:id="MechanicSkillsetBox" prefHeight="26.0" prefWidth="162.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label layoutX="10.0" layoutY="50.0" text="Especialidad:" GridPane.rowIndex="2" />
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>

            <HBox spacing="10">
                <Button onAction="#saveMechanic" text="Guardar" />
                <Button onAction="#clearForum" text="Limpiar" />
            </HBox>

            <Separator />

            <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Mecanicos registrados" />

            <TableView fx:id="tblMechanic" prefHeight="240">
                <columns>
                    <TableColumn fx:id="colName" prefWidth="220" text="Nombre" />
                    <TableColumn fx:id="colId" prefWidth="253.0" text="Identificación" />
                    <TableColumn fx:id="colSkill" prefWidth="216.0" text="Habilidad" />
                </columns>
            </TableView>

        </VBox>
    </center>

</BorderPane>
